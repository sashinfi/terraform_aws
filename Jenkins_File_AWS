pipeline {
    agent any
	
    tools {
        jdk 'JDK21'
        maven 'MAVEN_3911'
        terraform 'terraform_local' // Use the name you defined in Global Tool Configuration
							  
    }
    
parameters {
        choice(name: 'RUN_STAGE', choices: ['apply', 'destroy'], description: 'Select the apply or destroy actions')
    }
    stages {
        stage('Checkout Code') {
            steps {
                git branch: 'main', url: 'https://github.com/sashinfi/terraform_aws.git'		
            }
        }

        stage('Terraform Init') {
            when {
                expression { params.RUN_STAGE == 'apply'}
            }
            steps {
                bat 'terraform init'
            }
        }

        stage('Terraform Plan') {
             when {
                expression { params.RUN_STAGE == 'apply' }
            }
            steps {
                bat 'terraform plan -out=tfplan'
            }
        }
        stage('Terraform Apply/Destroy') {
            steps {
                script {
				    withCredentials([aws(accessKeyVariable: 'AWS_ACCESS_KEY_ID', credentialsId: 'aws-credentials-for-terraform', secretKeyVariable: 'AWS_SECRET_ACCESS_KEY')]) {
					bat 'echo Access key: %AWS_ACCESS_KEY_ID%'  // should NOT print blank
					bat 'echo Access key: %AWS_SECRET_ACCESS_KEY%'
                        if (params.RUN_STAGE == 'apply') {
                            bat 'terraform apply -auto-approve tfplan'
                        } else if (params.RUN_STAGE == 'destroy') {
                            bat 'terraform destroy -auto-approve'
                        } else {
                            error("‚ùå Invalid RUN_STAGE parameter. Must be apply or destroy.")
                        }

                    }
                    
                }
            }
        }
    }
}
